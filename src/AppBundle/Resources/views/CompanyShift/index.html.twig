{% extends '::base.html.twig' %}

{% block body -%}
    <h1>CompanyShift list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Companyid</th>
                <th>Name</th>
                <th>Start</th>
                <th>End</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('manager_company_shifts_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.companyId }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.start }}</td>
                <td>{{ entity.end }}</td>
                <td>{{ entity.description }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('manager_company_shifts_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('manager_company_shifts_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('manager_company_shifts_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
